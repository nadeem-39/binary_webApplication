  .developer-container {

    margin: 20px 10px 0 10px;
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    justify-content: center;
  }

  .developer-card {
    background: #ffffff;
    border-radius: 20px;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    padding: 2rem;
    width: 300px;
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .developer-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 20px rgba(0, 0, 0, 0.15);
  }

  .developer-card img {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    object-fit: cover;
    margin-bottom: 1rem;
    border: 3px solid #0077b6;
  }

  .developer-card h2 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    color: #333;
  }

  .developer-card p {
    color: #555;
    margin-bottom: 1rem;
    line-height: 1.5;
  }

  .developer-skills {
    margin-bottom: 1rem;
  }

  .developer-skills span {
    background-color: #e0f2ff;
    color: #0077b6;
    padding: 5px 10px;
    margin: 3px;
    border-radius: 12px;
    font-size: 0.85rem;
    display: inline-block;
  }

  .developer-social a {
    text-decoration: none;
    color: #0077b6;
    margin: 0 10px;
    font-weight: bold;
    transition: color 0.3s ease;
  }

  .developer-social a:hover {
    color: #023e8a;
  }

  @media (max-width: 768px) {
    .developer-card {
      width: 90%;
    }
  }
</style>
</head>
